    <h2 style="display:inline-block;margin-right:15px;">Users</h2><?php echo link_to_route('admin.users.create','Add a new user',NULL,array('class'=>'buttons')); ?>

        
    <?php if(count($users)>0): ?>
    <table>
        <tr style="text-align:left"><th>User Name</th><th>Email</th></tr>
        <?php foreach($users as $user): ?>
            <tr>
                <td style="padding-right:15px;width:120px;"><?php echo $user->username; ?></td>
                <td style="padding-right:15px;"><?php echo $user->email; ?></td>
                <td>
    
                    <?php echo link_to_route('admin.users.edit','Edit',array($user->id),array('class'=>'buttons')); ?>


                    
                    <?php echo Form::open(array('route'=>array('admin.users.destroy',$user->id), 'method'=>'delete','style'=>'display:inline-block')); ?>

                    <?php echo Form::submit('Delete',array('class'=>'buttons')); ?>

                    <?php echo Form::close(); ?>

  
                </td>
            </tr>
        <?php endforeach; ?>
        
        
    </table>    
    
    
    <?php else: ?>
        <h2>No User Found</h2>
    <?php endif; ?>

    
<?php $__env->stopSection(); ?>
<?php echo $__env->make('admin._layout.admin', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>